@model IEnumerable<Task.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home</h2>

<p>
    @Html.ActionLink("Add New Product", "Create")
</p>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="w3-col l3 s6">
            <div class="w3-container">
                <div class="w3-display-container">
                    <img src="@Url.Content(item.Photo)" width="200" height="250">
                    <span class="w3-tag w3-display-topleft">New</span>
                    <div class="w3-display-middle w3-display-hover">
                        <div class="btn-group">
                            <button class="w3-button w3-circle w3-orange">@Html.ActionLink("Edit", "Edit", new { id = item.ID })  <i class="fa fa-shopping-cart"></i></button>
                            <button class="w3-button w3-circle w3-green"> @Html.ActionLink("Details", "Details", new { id = item.ID })<i class="fa fa-check-circle"></i></button>
                            <button class="w3-button w3-circle w3-red">@Html.ActionLink("Delete", "Delete", new { id = item.ID }) <i class="fa fa-close"></i></button>
                        </div>
                    </div>
                </div>
                <p>@item.Name<br><b>$@item.Price</b></p>
            </div>
        </div>
    }
}
else
{
    <h1 class="text-center text-danger" >No Product</h1>
}


